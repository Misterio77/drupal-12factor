{$DRUPAL_WEB_HOSTNAME}:{$DRUPAL_WEB_PORT:8080} {
  # Files from the public data directory
  @pub_files {
    path "/files*"
  }
  route @pub_files {
    root * "{$DRUPAL_DATA_PATH:./data}/public"
    uri strip_prefix "/files"
    file_server browse
  }

  # Other assets are assumed to come from the webroot
  @module_assets {
    path "robots.txt"
    path "*.css"
    path "*.eot"
    path "*.gif"
    path "*.ico"
    path "*.jpeg"
    path "*.jpg"
    path "*.js"
    path "*.map"
    path "*.otf"
    path "*.png"
    path "*.svg"
    path "*.woff"
    path "*.woff2"
  }
  route @module_assets {
    root * "{$DRUPAL_PROJECT_ROOT:.}/web"
    # root "web"
    file_server browse
  }

  # For all other requests, use /index.php only
  route "*" {
    root * "{$DRUPAL_PROJECT_ROOT:.}/web"
    # root "web"
    try_files index.php
    php_fastcgi unix//tmp/drupal12factor-fpm.sock
  }
}
